= image_tag @story.image.url(:medium)
%h1= @story.title
%p= @story.link
%p= @story.description
%p= @story.user.name
%p
  = @story.get_upvotes.size
  Likes
%p
  = @story.get_downvotes.size
  Dislikes

= link_to "Like", like_story_path(@story), method: :get
= link_to "Dislike", dislike_story_path(@story), method: :get



#comment
  %h2.comment_count= pluralize(@story.comments.count, "Comment")
  - @comments.each do |comment|
    .comment
      %p.username= comment.user.name
      %p.content= comment.content

  = render 'comments/form'


= link_to "Back", root_path
= link_to "Edit", edit_story_path
= link_to "Delete", story_path, method: :delete, data: { confirm: "Are you sure?"}